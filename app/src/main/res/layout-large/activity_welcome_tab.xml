<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcomeScreen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/welcome_background"
    android:orientation="vertical"
    tools:context=".Welcome">


    <LinearLayout
        android:id="@+id/BICS_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp">


        <TextView
            android:id="@+id/BICS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="24dp"
            android:shadowColor="@color/icons"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="1"
            android:text="@string/bics"
            android:textColor="@color/icons"
            android:textSize="32sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/brainIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/brain_wheel"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="24dp"
            android:gravity="left"
            android:shadowColor="@color/icons"
            android:text="DMAC/BICS was Developed after comprehensive Research presented and accepted by: \nAmerican Academy of Neurology 2015 \nAmerican Medical Informatics Association 2015 \n"
            android:textColor="@color/icons"
            android:textSize="24sp"/>


        <TextView
            android:id="@+id/doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="40dp"
            android:gravity="left"
            android:shadowColor="@color/icons"
            android:text="@string/doctor_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/icons"
            android:textSize="24sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="left"
            android:text="Board Certified in Neurology &amp; Headache Medicine\nDirector of Headache, TBI &amp; Cognitive Research Institute"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/icons"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/disclaimer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="22dp"
            android:gravity="left"
            android:text="@string/read_disclaimer"
            android:textColor="@color/red_dark"
            android:textSize="22sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/get_started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/get_started_button_background"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Agree and Start"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="32sp"
        android:layout_alignParentBottom="true" />




</RelativeLayout>
