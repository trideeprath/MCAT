<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#FBC02D" />
            <stroke
                android:width="2dp"
                android:color="#FBC02D" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#ffeb3b"
                android:endColor="#ffeb3b"
                android:angle="270" />
            <stroke
                android:width="4dp"
                android:color="#ffeb3b" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>